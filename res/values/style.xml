<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SmallHeader">
        <item name="android:textColor">@color/Foreground</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="ActionBarButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Prefs">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MenuItem">
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="AnimationPopup">
        <item name="@android:windowEnterAnimation">@anim/popup_show</item>
        <item name="@android:windowExitAnimation">@anim/popup_hide</item>
    </style>
	
	<style name="PaddedTopBottom">
	    <item name="@android:paddingTop">10dp</item>
	    <item name="@android:paddingBottom">10dp</item>
	</style>
	
	<style name="InputField">
	    <item name="@android:background">@drawable/input_field_bg</item>
	    <item name="@android:layout_width">fill_parent</item>
	    <item name="@android:layout_height">wrap_content</item>
	    <item name="@android:paddingTop">5dp</item>
	    <item name="@android:paddingBottom">5dp</item>
	    <item name="@android:paddingLeft">2dp</item>
	    <item name="@android:textColor">@color/Text.Dark</item>
	    <item name="@android:textCursorDrawable">@null</item>
	    <item name="@android:textSize">18sp</item>
	    <item name="@android:gravity">left</item>
	</style>
</resources>