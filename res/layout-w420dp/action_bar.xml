<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_button"
    android:orientation="vertical" >

    <view
        android:id="@+id/actionbar_back"
        style="@style/ActionBarButton"
        android:layout_width="@dimen/action_bar_button"
        android:layout_height="@dimen/action_bar_button"
        android:layout_alignParentLeft="true"
        class="com.zybnet.abc.view.NavigateBackView"
        android:contentDescription="@string/back"
        android:src="@drawable/btn_navigation_previous_item"
        android:visibility="invisible" />

    <com.mobclix.android.sdk.MobclixMMABannerXLAdView
        android:id="@+id/banner_adview"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true" />

    <ImageButton
        android:id="@+id/actionbar_menu"
        style="@style/ActionBarButton"
        android:layout_width="@dimen/action_bar_button"
        android:layout_height="@dimen/action_bar_button"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/place"
        android:src="@drawable/btn_action_overflow" />

</RelativeLayout>